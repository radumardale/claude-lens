{
  "name": "claude-lens",
  "version": "0.2.0",
  "description": "CLI tool to scan, report, and manage Claude Code configuration",
  "type": "module",
  "bin": {
    "claude-lens": "./dist/bin/claude-lens.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radumardale/claude-lens.git"
  },
  "bugs": {
    "url": "https://github.com/radumardale/claude-lens/issues"
  },
  "homepage": "https://github.com/radumardale/claude-lens#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsx bin/claude-lens.ts",
    "start": "node dist/bin/claude-lens.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "release:ci": "release-it --ci"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "configuration",
    "mcp"
  ],
  "author": "radumardale",
  "license": "MIT",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "ink": "^5.1.0",
    "ora": "^8.1.1",
    "react": "^18.3.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "release-it": "^19.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
